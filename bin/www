#!/usr/bin/env node
var debug = require('debug')('server');
var app = require('../app');

var server_ip_address = process.env.OPENSHIFT_NODEJS_IP || '127.0.0.1'
app.set('port', process.env.PORT || process.env.OPENSHIFT_NODEJS_PORT || 80);

var server = app.listen(app.get('port'), server_ip_address, function() {
  debug('Express server listening on port ' + server_ip_address + ':' + server.address().port);
});
