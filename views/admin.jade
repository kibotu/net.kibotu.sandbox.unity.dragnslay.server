extends layout

block content

    #message-box

    .page-header
        .row
            .col-md-3
                h1.right  Admin Console
                h5#connected-clients.right
                h5#latency.right
            .col-md-1
                    h5 CPU usage
                    h5 Memory usage
            .col-md-8
                .progress.progress-striped
                    #cpu-usage.progress-bar(role="progressBar",style="width:50%")
                .progress.progress-striped
                    #memory-usage.progress-bar(role="progressBar",style="width:50%")

    .row
        .col-sm-2
            .panel.panel-default
                .panel-heading
                    h3.panel-title Queue
                .panel-body.control-element
                    include queue

        .col-sm-2
            .panel.panel-default
                .panel-heading
                    h3.panel-title Games
                .panel-body.control-element
                    include listrooms

        .col-sm-6
            .panel.panel-default
                .panel-heading
                    h3.panel-title Messages
                .panel-body.control-element.control-element
                    include chatform

        .col-sm-2
            .panel.panel-default
                .panel-heading
                    h3.panel-title Client-Events
                .panel-body.center.control-element
                    include client-events

    .row
        .col-sm-10
            .panel.panel-default
                .panel-heading
                    h3.panel-title Preview
                .panel-body.control-element
                    include preview

        .col-sm-2
            .panel.panel-default
                .panel-heading
                    h3.panel-title Server-Events
                .panel-body.center.control-element
                    include server-events

    include global-js-includes
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/code.js')